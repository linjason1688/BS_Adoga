<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    @*@Styles.Render("~/Content/css")*@
    <link href="~/Asset/CSS/FunctionPage.css" rel="stylesheet" />
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div class="menu">
        <h1>飯店管理</h1>
        <ul>
            <li>@Html.ActionLink("飯店資料", "Index", "Hotels")</li>
            <li>@Html.ActionLink("房間資料", "Index", "Rooms")</li>
            <li>@Html.ActionLink("飯店設施", "Index", "Facilities")</li>
            <li>@Html.ActionLink("房間展開", "DateRoom", "Function")</li>
            <li>@Html.ActionLink("訂單查詢", "Orders", "Function")</li>
        </ul>
        <footer>
            <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <p class="text-warning">[@User.Identity.Name]</p>
                    <li>@Html.ActionLink("登出", "SignOut", "HotelLogin")</li>
                }
                else
                {
                    <li>@Html.ActionLink("登入", "HotelLogin", "HotelLogin")</li>
                    <li>@Html.ActionLink("註冊", "HotelLogin", "HotelLogin")</li>
                }
            </ul>
        </footer>
        @*@Html.Partial("_LoginPartial")*@
    </div>
    <div class="content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
            </footer>*@
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
            crossorigin="anonymous"></script>
    @*<footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>*@

    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
