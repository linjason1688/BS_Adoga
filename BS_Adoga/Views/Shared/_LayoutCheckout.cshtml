<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("topCSS", required: false)
    <link rel="stylesheet" href="~/Asset/CSS/Layout.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light mb-5 shadow-sm bg-body rounded">
        <div class="container">
            <a href="navbar-brand" class="d-none d-md-block">
                <img src="~/Asset/images/adoga-logo-v2.png" alt="Adoga-Logo" title="Adoga-Logo-Homepage">
            </a>
            <div id="progress-bar">
                <ul class="steps mx-auto">
                    <li class="step step-active">
                        <div class="step-content">
                            <span class="step-circle">1</span>
                            <span class="step-text">填寫住客資料</span>
                        </div>
                    </li>
                    <li class="step">
                        <div class="step-content">
                            <span class="step-circle">2</span>
                            <span class="step-text">選擇付款方式</span>
                        </div>
                    </li>
                    <li class="step">
                        <div class="step-content">
                            <span class="step-circle">3</span>
                            <span class="step-text">接收入住憑證</span>
                        </div>
                    </li>
                </ul>


            @*登入登出狀態按鈕*@
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="member-btn">
                    <label type="button" for="member-menu-chkbox">
                        <span class="member-img">@User.Identity.Name.Substring(0, 1)</span>
                        <span class="member-firstname ff-mont fz-12 fw-bold">@User.Identity.Name</span>
                    </label>
                    <input type="checkbox" id="member-menu-chkbox">
                    @*已登入時的顯示*@
                    <div class="member-menu">
                        <h6>我的帳戶</h6>
                        <ul>
                            <li>
                                <i class="far fa-calendar-check me-2"></i>
                                @Html.ActionLink("管理訂單", "MemberBooking", "Account")
                            </li>
                            <li><i class="fas fa-inbox me-2"></i> 收件匣</li>
                            <li><i class="fas fa-heart me-2"></i> 口袋清單</li>
                            <li><i class="far fa-star me-2"></i> 住宿評鑒</li>
                            <li>
                                <i class="far fa-user me-2"></i>
                                @Html.ActionLink("個人資料", "MemberProfile", "Account")
                            </li>
                            @Html.ActionLink("登出", "SignOut", "MemberLogin", null, new { @class = "logout-btn btn py-2" })
                        </ul>
                    </div>
                </div>

            }
            else
            {
                //未登入時的顯示
                @Html.ActionLink("A咖登入", "MemberLogin", "MemberLogin", null, new { @class = "head-nav-item blue" })
                @*<a href="#" class="head-nav-item blue" data-bs-toggle="modal" data-bs-target="#SigninModal">A咖登入</a>*@
                <a href="#" class="head-nav-item blue" data-bs-toggle="modal" data-bs-target="#RegisterModal">我是新朋友</a>
            }
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="d-flex flex-column justify-content-center align-items-center d-none d-lg-block">
        <p class="text-white-50" style="margin-top: 70px; text-align:center">
            本網站內容由© 2005–2021 Adoga Company Pte. Ltd.保留所有權利 <br>
            Adoga.com隸屬於全球線上旅遊相關事業的領導品牌Booking Holdings集團。
        </p>
        <div class="container" style="margin-top: 50px;">
            <div class="d-flex">
                <div class="col-2">
                    <img src="~/Asset/images/adoga-logo-v2.png" alt="">
                </div>
                <div class="col-2">
                    <img src="~/Asset/images/img2.png" alt="">
                </div>
                <div class="col-2">
                    <img src="~/Asset/images/img3.png" alt="">
                </div>
                <div class="col-2">
                    <img src="~/Asset/images/img4.png" alt="">
                </div>
                <div class="col-2">
                    <img src="~/Asset/images/img5.png" alt="">
                </div>
                <div class="col-2">
                    <img src="~/Asset/images/img6.png" alt="">
                </div>
            </div>
        </div>
        <p class="text-white-50 text-center" style="margin-top: 70px;">
            hk-crweb-2009
        </p>
    </footer>




    <!-- mine -->
    @RenderSection("endJS", false)


    <!--boostrap 5.0-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/6f2489c728.js" crossorigin="anonymous"></script>

</body>
</html>
