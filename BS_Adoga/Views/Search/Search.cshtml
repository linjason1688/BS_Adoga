    <script>
        //var td = ViewData["con"];

        //過濾出地區(distinct)
        var deduped = dedup([
            @foreach (var item in Model.HotelOptionVM)
            {
                 @Html.Partial("~/Views/Search/_optionCity.cshtml", item);
            }
        ]);
        function dedup(arr) {
            var hashTable = {};
            return arr.filter(function (el) {
                var key = JSON.stringify(el);
                var match = Boolean(hashTable[key]);
                return (match ? false : hashTable[key] = true);
            });
        }

        //搜尋地區、人數
        var filternav = new Vue({
            el: '#nav',
            data: {
                room: @TempData["room"],
                adult: @TempData["adult"],
                kids: @TempData["kid"],
                Value: '@TempData["CityOrName"]',
                startDate: '@TempData["sDate"]',
                endDate:'@TempData["end"]',
                Options: [
                    {
                        label: '熱門城市',
                        option: deduped
                    },
                    {
                        label: '飯店名稱',
                        option: [
                            @foreach (var item in Model.HotelOptionVM)
                            {
                                @Html.Partial("~/Views/Search/_optionHotel.cshtml", item);
                            }
                        ]
                    }
                ]
            },
            methods: {
                minus: function (e) {
                    switch (e) {
                        case 'room':
                            if (this.room > 1) {
                                this.room -= 1;
                            }
                            break;
                        case "adult":
                            if (this.adult > 1) {
                                this.adult -= 1
                            }
                            break;
                        default:
                            if (this.kids > 0) {
                                this.kids -= 1
                            }
                            break;
                    }
                },
                plus: function (e) {
                    switch (e) {
                        case 'room':
                            if (this.room < 9) {
                                this.room += 1;
                            }
                            break;
                        case "adult":
                            if (this.adult < 9) {
                                this.adult += 1
                            }
                            break;
                        default:
                          if (this.kids < 9) {
                                this.kids += 1
                          }
                          break;
                    }
                }
            }
        });
    </script>
    <script type="text/javascript" src="https://cdn.bootcdn.net/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.bootcss.com/moment.js/2.24.0/moment.min.js"></script>

    <script src="https://momentjs.com/downloads/moment-with-locales.js"></script>
